{
  "compilerOptions": {
    "module": "amd",
    "target": "es2020",
    "moduleResolution": "node",
    "sourceMap": false,
    "newLine": "LF",
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "baseUrl": " ",
    "lib": ["es5", "es2020", "dom"],
    "paths": {
      "N": ["node_modules/@hitc/netsuite-types/N"],
      "N/*": ["node_modules/@hitc/netsuite-types/N/*"]
    },
    "outDir": "src/FileCabinet/SuiteScripts/email-to-csv-import"
  },
  "exclude": ["node_modules"],
  "include": ["./"]
}
